{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "includeFiles": ["serverMiddleware/data-to-xml.js"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "https://core.gamatrain.com/api/v1/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://core.gamatrain.com/uploads/:path*"
    }
  ],
  "functions": {
    "serverMiddleware/data-to-xml.js": {
      "maxDuration": 300
    }
  }
}
